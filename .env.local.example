# LiveKit server URL (used server-side in token generation)
LIVEKIT_URL=wss://your-project.livekit.cloud

# LiveKit API credentials (server-side only — never expose to client)
LIVEKIT_API_KEY=your_api_key
LIVEKIT_API_SECRET=your_api_secret

# LiveKit public URL (inlined at build time for the client)
# Must match LIVEKIT_URL — copy the same value here
NEXT_PUBLIC_LIVEKIT_URL=wss://your-project.livekit.cloud

# Neon PostgreSQL connection string
DATABASE_URL=postgresql://user:password@host/dbname?sslmode=require

# better-auth secret (generate with: openssl rand -base64 32)
BETTER_AUTH_SECRET=your_random_32plus_char_secret

# App base URL — used by better-auth for callback URLs
BETTER_AUTH_URL=http://localhost:3000

# Public app URL — used by the auth client
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Resend API key
RESEND_API_KEY=re_your_resend_api_key

# Verified sender address in Resend
RESEND_FROM_EMAIL=noreply@minut.app
